<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context="com.fanfan.fragmentapp.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e1432a">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="信息"
            android:textSize="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="#009"/>
    </RelativeLayout>

    <LinearLayout
        android:background="#0aead0"
        android:id="@+id/ll_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_channel"
            android:padding="5dp"
            android:text="提醒"
            android:gravity="center"
            android:drawableTop="@drawable/tab_menu_channel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_message"
            android:text="信息"
            android:gravity="center"
            android:drawableTop="@drawable/tab_menu_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_better"
            android:text="我的"
            android:gravity="center"
            android:drawableTop="@drawable/tab_menu_better"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_setting"
            android:text="设置"
            android:gravity="center"
            android:drawableTop="@drawable/tab_menu_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:background="#009"
        android:layout_below="@+id/fl_layout"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
    <FrameLayout
        android:id="@+id/fl_layout"
        android:layout_above="@+id/ll_layout"
        android:layout_below="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
</RelativeLayout>
